{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "types": ["node", "jest"]
  },
  "include": ["src/**/*", "tests/**/*", "api/**/*"],
  "exclude": ["node_modules", "dist"]
}
